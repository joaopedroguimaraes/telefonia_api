{
  "openapi": "3.0.1",
  "info": {
    "title": "Telefonia API",
    "description": "Telefonia API for blocked phone numbers validations",
    "contact": {
      "email": "joaopedroguimaraes96@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "blocked_number",
      "description": "Blocked numbers collection"
    }
  ],
  "paths": {
    "/phones": {
      "get": {
        "tags": [
          "blocked_number"
        ],
        "summary": "Retrieves all blocked phone numbers",
        "description": "Multiple status values can be provided with comma separated strings",
        "operationId": "getAllPhones",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/blocked_phones"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "content": {}
          }
        }
      },
      "post": {
        "tags": [
          "blocked_number"
        ],
        "summary": "Add phone numbers to blocklist",
        "operationId": "postBlockedPhones",
        "requestBody": {
          "description": "Add a list of phones to blocklist",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/blocked_phones"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully blocked phone numbers",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/blocked_phones_result"
                  }
                }
              }
            }
          },
          "400": {
            "description": "JSON inv√°lido ou vazio"
          },
          "500": {
            "description": "Erro inesperado no servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "blocked_phones": {
        "type": "object",
        "required": [
          "phone_number"
        ],
        "properties": {
          "phone_number": {
            "type": "string",
            "maxLength": 25
          }
        }
      },
      "blocked_phones_result": {
        "type": "object",
        "required": [
          "phone_number"
        ],
        "properties": {
          "phone_number": {
            "type": "string",
            "maxLength": 25
          },
          "blocked_status": {
            "type": "string",
            "enum": [
              "blocked",
              "invalid_phone_number",
              "duplicated"
            ]
          }
        }
      }
    }
  }
}